# 服务器配置
SERVER_PORT=8080
GIN_MODE=debug

# 数据库配置 - 支持 postgres, mysql, sqlite
# 选择一种数据库驱动
DB_DRIVER=sqlite

# PostgreSQL 配置
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=gin_web_framework
DB_SSLMODE=disable

# MySQL 配置 (当 DB_DRIVER=mysql 时使用)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USERNAME=root
# DB_PASSWORD=password
# DB_NAME=gin_web_framework

# SQLite 配置 (当 DB_DRIVER=sqlite 时使用)
# DB_PATH=./data/app.db

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=dev_jwt_secret_key_here_must_be_at_least_32_chars_long
JWT_EXPIRE_HOURS=24

# OpenTelemetry 配置
TELEMETRY_ENABLED=true
OTLP_ENDPOINT=http://localhost:4318/v1/traces
ENABLE_TRACING=true
ENABLE_METRICS=true
TELEMETRY_SERVICE_NAME=ai-self-project-backend
TELEMETRY_SERVICE_VERSION=1.0.0
TELEMETRY_ENVIRONMENT=development
